@model Nhom3.Core.Domains.TaiKhoan
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Thay đổi mật khẩu</title>
</head>

<div class="col-sm-5 col-sm-offset-1" style="min-height:700px">
    <div class="login-form">
        <h3>Đổi mật khẩu</h3>
        @using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post, new { @class = "signin-form" }))
        {

            @Html.AntiForgeryToken()
            <form>

                <div class="form-group">
                    <div>Mật khẩu cũ</div>
                    @{ 
                        var pass = Model.MatKhau;
                    }
                    @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-style", @id = "new_pass",@disabled= "disabled",@value=pass} })
                    
                </div>
                <div class="form-group">
                    <div>Mật khẩu mới</div>
                    <input type="password" name="newPass" class="form-control" />
                </div>
                <div class="form-group">
                    <div>Nhập lại mật khẩu</div>
                    <input type="password" name="rePass" class="form-control" id="again_pass" />
                </div>
                @Html.HiddenFor(model => model.TenTaiKhoan)
                @Html.HiddenFor(model => model.TinhTrang)
                @Html.HiddenFor(model => model.Quyen)
                @Html.HiddenFor(model => model.TenKhachHang)
                @Html.HiddenFor(model => model.Email)
                @Html.HiddenFor(model => model.SoDienThoai)
                @Html.HiddenFor(model => model.DiaChi)
                @Html.HiddenFor(model => model.MatKhau)
                <div class="form-group row">
                    <div class="col-sm-5 col-sm-offset-1" style="display:flex; justify-content:space-between">
                        <input type="submit" value="Thay đổi" id="btn-change-pass" class="btn btn-primary" style="width:70px;height:35px; margin-top:0; border-radius:4px" />

                        <div style="width: 70px">
                            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-warning" })
                        </div>
                    </div>

                </div>
            </form>}
    </div>
</div>
<!--/login form-->
@if (ViewBag.mess != null)
{ 
<span class="alert alert-danger">@ViewBag.mess</span>
}
