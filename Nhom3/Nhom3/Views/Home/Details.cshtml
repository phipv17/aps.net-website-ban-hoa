@model Nhom3.Core.Domains.SanPham
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <title>Chi tiết sản phẩm</title>
</head>
<div class="col-md-12 padding-right">
    <div class="product-details">
        <!--product-details-->
        <div class="col-md-5">    
                <img src="@Url.Content("~/wwwroot/Content/images/"+Model.Anh)"
                     alt=""
                     style="width: 500px; height:485px" />
            
        </div>
        <div class="col-md-7" style="background-color:antiquewhite; border-radius:20px;">
            <div class="product-information">
                <!--/product-information-->
                
                <h1><b>@Html.DisplayFor(model => model.TenSP)</b></h1>
                <p> @Html.DisplayFor(model => model.Gia) VND</p>
                <img src="@Url.Content("~/wwwroot/Cotent/images/"+Model.Anh)" alt="" />

                <strong>Mô tả sản phẩm</strong>
                <p>
                    Hoa chính: @Html.DisplayFor(model => model.HoaChinh)
                </p>
                <p>Hoa phụ: @Html.DisplayFor(model => model.HoaPhu)</p>

                <br />
                <strong>Mô tả chi tiết: </strong>
                <p style="height:110px;">
                    @Html.DisplayFor(model => model.MoTa)
                </p>
                <button type="button" class="btn btn-fefault cart" style="margin-left:0px">
                    <a href="@Url.Action("AddToCart","Home",new { productCode=Model.MaSP})" style="color:white;">
                        <i class="fa fa-shopping-cart"></i>
                        Thêm vào giỏ hàng
                    </a>
                </button>
            </div>
            <!--/product-information-->
        </div>
    </div>
</div>

