@model Nhom3.Core.Domains.DanhMuc

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row bg-primary">
    <div class="col-lg-12">
        <h1 class="page-header" style="text-align:left;">Xóa danh mục</h1>
    </div>
</div>
<h3 style="color:red;"> Bạn có chắc muốn xóa danh mục này ?</h3>
@if (ViewBag.Error != null)
{
    <br />
    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>}

<div class="form-horizontal">




    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group col-md-12 ">
            @Html.LabelFor(model => model.MaDM, "Mã danh mục", htmlAttributes: new { @class = "control-label", @style = "float:left;                                                                    " })
            <div class="">
                @Html.EditorFor(model => model.MaDM, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.MaDM, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-md-12 ">
            @Html.LabelFor(model => model.TenDM, "Tên danh mục", htmlAttributes: new { @class = "control-label", @style = "float:left;                                                                    " })
            <div class="">
                @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.TenDM, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-12">
            <input type="submit" value="Xóa" class="btn btn-sm btn-danger " />
            @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-sm btn-primary " })
        </div>

    }


</div>
