@model Nhom3.Core.Domains.DanhMuc

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12 bg-primary">
            <h1 class="page-header" style="text-align:left;">Sửa danh mục</h1>
        </div>
    </div>
    <div class="form-horizontal">

        @if (ViewBag.Message != null)
        {
            <span class="alert alert-danger col-md-12 " style="margin-top:10px;">@ViewBag.Message</span>
        }
        @Html.ValidationSummary(true, "", new { @class = "text-danger col-md-12" })
        @Html.HiddenFor(model => model.MaDM)

        <div class="form-group col-md-12 ">
            @Html.LabelFor(model => model.TenDM, "Tên danh mục", htmlAttributes: new { @class = "control-label", @style = "float:left;                                                                    " })
            <div class="">
                @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDM, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-12">
            <input type="submit" value="Lưu" class="btn btn-sm btn-success normal-text" style="margin-left:-50px;" />
            @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-sm btn-danger normal-text" })
        </div>
    </div>
}


