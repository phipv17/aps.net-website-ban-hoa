@model Nhom3.Core.Domains.DanhMuc

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12 bg-primary">
            <h1 class="page-header" style="text-align:left;">Chi tiết danh mục</h1>
        </div>
    </div>
    <div class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger col-md-12" })
        <div class="form-group col-md-12 ">
            @Html.LabelFor(model => model.MaDM, "Tên danh mục", htmlAttributes: new { @class = "control-label", @style = "float:left;                                                                    " })
            <div class="">
                @Html.EditorFor(model => model.MaDM, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            </div>
        </div>

        <div class="form-group col-md-12 ">
            @Html.LabelFor(model => model.TenDM, "Tên danh mục", htmlAttributes: new { @class = "control-label", @style = "float:left;                                                                    " })
            <div class="">
                @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control",@disabled="disabled" } })
            </div>
        </div>

        <div class="form-group col-md-12">
           
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-sm btn-danger normal-text" })
        </div>
    </div>
}


