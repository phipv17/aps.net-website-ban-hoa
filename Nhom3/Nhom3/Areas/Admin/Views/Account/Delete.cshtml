@model Nhom3.Core.Domains.TaiKhoan

@{

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row bg-primary">
    <div class="col-lg-12">
        <h1 class="page-header" style="text-align:left;">Thông tin tài khoản</h1>
    </div>
</div>
@if (ViewBag.Error != null)
{

    <div class="col-md-12" style="margin-top:3%;">
        <div class="alert alert-danger">@ViewBag.Error</div>
    </div>
}
@using (Html.BeginForm("DeleteConfirmed", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row" style="margin-top:20px;">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.TenTaiKhoan, htmlAttributes: new { @class = "bmd-label-floating", @style = "float:left;" })
                @Html.EditorFor(model => model.TenTaiKhoan, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "bmd-label-floating", @style = "float:left;" })
                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.Quyen, htmlAttributes: new { @class = "bmd-label-floating", @style = "float:left;" })
                @if (Model.Quyen == 1)
                {
                    <input type="text" value="Quản trị viên" name="Quyen" disabled class="form-control" />
                }
                @if (Model.Quyen == 2)
                {
                    <input type="text" value="Khách hàng" name="Quyen" disabled class="form-control" />
                }
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "bmd-label-floating", @style = "float:left;" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.SoDienThoai, htmlAttributes: new { @class = "bmd-label-floating", @style = "float:left;" })
                @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control", disabled = "@disabled" } })
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.TinhTrang, htmlAttributes: new { @class = "bmd-label-floating", @style = "float:left;" })

                @if (!Model.TinhTrang)
                {
                    <input type="text" value="Không hiệu lực" name="TinhTrang" disabled class="form-control" />
                }
                @if (Model.TinhTrang)
                {
                    <input type="text" value="Hoạt động" name="TinhTrang" disabled class="form-control" />
                }

            </div>
        </div>



        <div class="col-md-12">
            <input value="@Model.TenTaiKhoan" name="id" hidden />
            <input type="submit" value="Xóa" class="btn btn-sm btn-primary normal-text" />
            @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-sm btn-danger normal-text" })
        </div>


    </div>
}

