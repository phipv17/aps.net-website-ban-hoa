@model List<Nhom3.Core.Domains.TaiKhoan>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row bg-primary">
    <div class="col-lg-12">
        <h1 class="page-header" style="text-align:left;">Quản lý tài khoản</h1>
    </div>
</div>


<button class="btn btn-sm btn-success" style="padding:10px; float:left;margin-top:10px; margin-bottom:10px;border-radius:20px;">
    <a href="@Url.Action("Create","Account")" style="text-decoration: none; color: white;"><i class="fa fa-plus" aria-hidden="true"></i> Thêm mới</a>
</button>


<div class="row">
    <div class="col-lg-12">
        <table class="table table-hover" style="border-radius:20px;background-color:powderblue;">
            <thead>
                <tr>
                    <th>Tên DN</th>
                    <th>Mật khẩu</th>
                    <th>Quyền</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Tình trạng</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>@item.TenTaiKhoan</td>
                        <td>@item.MatKhau</td>
                        @if (item.Quyen == 0)
                        {
                            <td>Quản trị viên</td>
                        }
                        else
                        {
                            <td>Khách hàng</td>
                        }
                        <td>@item.Email</td>
                        <td>@item.SoDienThoai</td>
                        @if (item.TinhTrang)
                        {
                            <td>Hoạt động</td>
                        }
                        else
                        {
                            <td>Không hiệu lực</td>
                        }


                        <td>
                            <button class="btn btn-sm btn-info">
                                <a href="@Url.Action("Details","Account", new {id = item.TenTaiKhoan})" style="text-decoration: none; color: white;"><i class="fa fa-eye" aria-hidden="true"></i></a>
                            </button>
                            <button class="btn btn-sm btn-warning">
                                <a href="@Url.Action("Edit","Account",new {id = item.TenTaiKhoan })" style="text-decoration: none; color: white;"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                            </button>
                            <button class="btn btn-sm btn-danger">
                                <a href="@Url.Action("Delete","Account",new {id = item.TenTaiKhoan })" style="text-decoration: none; color: white;"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                            </button>
                        </td>
                    </tr>


                </tbody>
            }

        </table>

    </div>
</div>
</div>